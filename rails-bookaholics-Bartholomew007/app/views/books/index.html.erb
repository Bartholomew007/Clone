<p id="notice"><%= notice %></p>

<h1>The Bookaholics!</h1>
<%= link_to "View All", books_path %>-
<%= link_to "View Read",books_path(read: true) %>-
<%= link_to "View Unread",books_path(read: false) %>

<% if @filter == "done" %>
    <h1>Books read</h1>
<% elsif @filter == "not done" %>
    <h1>Unread books</h1>
<% else %>
    <h1>All Books</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Description</th>
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book %></td>
        <td><%= book.description %></td>
        <td><%= book.read %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>